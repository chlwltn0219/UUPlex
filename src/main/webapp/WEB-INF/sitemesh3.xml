  <!-- Map decorators to path patterns. -->
  <!-- Sitemesh 데코레이션을 매핑 할 패턴을 지정합니다. -->
  <mapping path="/*" decorator="/WEB-INF/views/decorator/main_decorator.jsp"/>
  
  <mapping>
    <path>/fitness</path>
    <path>/fitness/*</path>
    <decorator>/WEB-INF/views/decorator/fitness_decorator.jsp</decorator>
    <decorator>/WEB-INF/views/decorator/main_decorator.jsp</decorator>
  </mapping>
  
    <mapping>
    <path>/fitness/manage/*</path>
